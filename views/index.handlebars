<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <button onclick="window.location.href='/users/new'" id="new-user" class="btn btn-primary float-right">New User</button>
        <button onclick="window.location.href='/reports/new'" id="new-report" class="btn btn-primary float-right">New
          Report</button>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">City Search</label>
            <input type="text" id="city-name" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <button id="search-city" class="btn btn-primary float-right">City Search</button>
        </form>
        <h3>Reports:</h3>
        <ul id="example-list" class="list-group">
          {{#each reports}}
          <li>Type: {{this.type}}</li>
          <li>Description: {{this.description}}</li>
          <li>Location: {{this.location}}</li>
          <hr>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>